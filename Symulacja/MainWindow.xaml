<Window x:Class="Symulacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Symulacja"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Grid.Row="0">
            <Button Content="Start Simulation" Click="StartSimulation" Width="150" Margin="5"/>
            <Button Content="Stop Simulation" Click="StopSimulation" Width="150" Margin="5"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="File Size (MB):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="FileSizeTextBox" Width="100"/>
                <Button Content="Add Custom File" Click="AddCustomFile" Width="150" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Clients}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Client ID" Binding="{Binding ClientID}" Width="100"/>
                <DataGridTextColumn Header="File Size (MB)" Binding="{Binding FileSizeMB}" Width="150"/>
                <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTime}" Width="200"/>
                <DataGridTextColumn Header="Progress (%)" Binding="{Binding Progress}" Width="100"/>
                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
